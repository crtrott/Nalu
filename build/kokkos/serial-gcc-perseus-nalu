nalu_build_dir=/space/crtrott/NaluBuild/Serial/GCC/build
trilinos_install_dir=/space/crtrott/TrilinosBuild/Serial-Nalu/install
yaml_install_dir=/home/projects/x86-64/yaml/0.3.0/gcc/4.8.4
boost_dir=/home/crtrott/lib/boost/1.57.0/gcc/4.8.3

EXTRA_ARGS=$@

# Cleanup old cache before we configure
# Note:  This does not remove files produced by make.  Use "make clean" for this.
find . -name "CMakeFiles" -exec rm -rf {} \;
rm -f CMakeCache.txt

/home/crtrott/pkg/cmake/2.8.12/bin/cmake \
  -DTrilinos_DIR:PATH=$trilinos_install_dir \
  -DYAML_DIR:PATH=$yaml_install_dir \
  -DENABLE_INSTALL:BOOL=OFF \
  -DTPL_BoostLib_LIBRARIES="$boost_dir/lib/libboost_system.a;$boost_dir/lib/libboost_program_options.a" \
$EXTRA_ARGS \
/home/crtrott/NALU/Nalu-crtrott
